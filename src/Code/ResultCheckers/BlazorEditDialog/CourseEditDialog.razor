						<MatNumericUpDownField  Label="@(Localize["Unit"])" @bind-Value="FormData.Unit" FullWidth="true" />
						<ValidationMessage For="@(() => FormData.Unit)" />
					</div>

		<!-- StudentCourses | StudentCourse | Collection -->
						<div class="mat-layout-grid-cell-span-12">
							<MatSlideToggle Label="Tracker"  @bind-Value="@showTracker"></MatSlideToggle>
							@if (showTracker)
							{
								<fieldset disabled>
									<TrackerDto Model="FormData" />
								</fieldset>
							}
						</div>
					</div>
				</div>

			</MatDialogContent>
                <MatDialogActions>
                    <MatButton Type="button" OnClick=@CancelCourse>@Localize["CANCEL"]</MatButton>
