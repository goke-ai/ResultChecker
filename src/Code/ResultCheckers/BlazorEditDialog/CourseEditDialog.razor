					</div>
				<!-- Title | isForeignKey(False) | @string | 00 -->
							
					<div class="mat-layout-grid-cell-span-12">
						<MatTextField TextArea="true" Label="@(Localize["Title"])" @bind-Value="FormData.Title" FullWidth="true" />
						<ValidationMessage For="@(() => FormData.Title)" />
					</div>
				<!-- Unit | isForeignKey(False) | @double | 00 -->
							
