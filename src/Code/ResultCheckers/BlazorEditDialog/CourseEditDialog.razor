                    {
                        <!-- Button to delete the product -->
                        <MatButton Type="button" OnClick=@DeleteCourse Icon="@MatIconNames.Restore_from_trash" title="Delete Course">DELETE</MatButton>
                    }

                </MatDialogActions>
            </MatDialog>
