@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@attribute [Authorize]
@inject HttpClient Http
@inject IApiService ApiSvc
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localize
@inject IMatToaster Toaster


	<div>
		<EditForm Model="@FormData" OnValidSubmit="@SaveSession" Context="SessionEditContext">
			<MatDialog @bind-IsOpen="@DialogIsOpen">
                <MatDialogTitle>@Localize["Session Edit"] </MatDialogTitle>
                <MatDialogContent>

                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mat-layout-grid">
                        <div class="mat-layout-grid-inner">
                            <div class="mat-layout-grid-cell-span-12">
								<MatTextField Label="Name" @bind-Value="FormData.Name" FullWidth="true" />
							</div>

		<!-- StudentCourses | StudentCourse | Collection -->
						<div class="mat-layout-grid-cell-span-12">
							<MatSlideToggle Label="Tracker"  @bind-Value="@showTracker"></MatSlideToggle>
							@if (showTracker)
							{
								<fieldset disabled>
									<TrackerDto Model="FormData" />
								</fieldset>
							}
						</div>
					</div>
				</div>

			</MatDialogContent>
                <MatDialogActions>
                    <MatButton Type="button" OnClick=@CancelSession>@Localize["CANCEL"]</MatButton>
                    @if(CanAdd || CanUpdate)
					{
					<!-- Button to save the product -->
                    <MatButton Type="submit" title="@(Localize["Save Session"])">@Localize["SAVE"]</MatButton>
                    }
					<!-- Only show button if not a new record -->
                    @if (FormData.Id > 0 && CanDelete)
                    {
                        <!-- Button to delete the product -->
                        <MatButton Type="button" OnClick=@DeleteSession Icon="@MatIconNames.Restore_from_trash" title="Delete Session">DELETE</MatButton>
                    }

                </MatDialogActions>
            </MatDialog>
		</EditForm>
				
	</div>

@code {
    
    
    [Parameter] public SessionDto FormData { get; set; } = new SessionDto();
    [Parameter] public bool DialogIsOpen { get; set; }
    [Parameter] public bool CanView { get; set; } = true;
    [Parameter] public bool CanAdd { get; set; }
    [Parameter] public bool CanUpdate { get; set; }
    [Parameter] public bool CanDelete { get; set; }

    bool showTracker;

    //<!-- StudentCourses | StudentCourse | Collectiion -->

	
    [Parameter] public EventCallback<SessionDto> OnSave { get; set; }
    [Parameter] public EventCallback<SessionDto> OnDelete { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }


    void SaveSession()
    {
        OnSave.InvokeAsync(FormData);
    }

    void DeleteSession()
    {
        OnDelete.InvokeAsync(FormData);
    }

    void CancelSession()
    {
        OnCancel.InvokeAsync(null);
    }

}

