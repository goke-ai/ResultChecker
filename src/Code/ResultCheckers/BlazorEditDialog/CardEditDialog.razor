@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@attribute [Authorize]
@inject HttpClient Http
@inject IApiService ApiSvc
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localize
@inject IMatToaster Toaster


	<div>
		<EditForm Model="@FormData" OnValidSubmit="@SaveCard" Context="CardEditContext">
			<MatDialog @bind-IsOpen="@DialogIsOpen">
                <MatDialogTitle>@Localize["Card Edit"] </MatDialogTitle>
                <MatDialogContent>

                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mat-layout-grid">
                        <div class="mat-layout-grid-inner">
				<!-- Pin | isForeignKey(False) | @string | 00 -->
							
					<div class="mat-layout-grid-cell-span-12">
						<MatTextField TextArea="true" Label="@(Localize["Pin"])" @bind-Value="FormData.Pin" FullWidth="true" />
						<ValidationMessage For="@(() => FormData.Pin)" />
					</div>
						<div class="mat-layout-grid-cell-span-12">
							<MatSlideToggle Label="Tracker"  @bind-Value="@showTracker"></MatSlideToggle>
							@if (showTracker)
							{
								<fieldset disabled>
									<TrackerDto Model="FormData" />
								</fieldset>
							}
						</div>
					</div>
				</div>

			</MatDialogContent>
                <MatDialogActions>
                    <MatButton Type="button" OnClick=@CancelCard>@Localize["CANCEL"]</MatButton>
                    @if(CanAdd || CanUpdate)
					{
					<!-- Button to save the product -->
                    <MatButton Type="submit" title="@(Localize["Save Card"])">@Localize["SAVE"]</MatButton>
                    }
					<!-- Only show button if not a new record -->
                    @if (FormData.Id > 0 && CanDelete)
                    {
                        <!-- Button to delete the product -->
                        <MatButton Type="button" OnClick=@DeleteCard Icon="@MatIconNames.Restore_from_trash" title="Delete Card">DELETE</MatButton>
                    }

                </MatDialogActions>
            </MatDialog>
		</EditForm>
				
	</div>

@code {
    
    
    [Parameter] public CardDto FormData { get; set; } = new CardDto();
    [Parameter] public bool DialogIsOpen { get; set; }
    [Parameter] public bool CanView { get; set; } = true;
    [Parameter] public bool CanAdd { get; set; }
    [Parameter] public bool CanUpdate { get; set; }
    [Parameter] public bool CanDelete { get; set; }

    bool showTracker;

	
    [Parameter] public EventCallback<CardDto> OnSave { get; set; }
    [Parameter] public EventCallback<CardDto> OnDelete { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }


    void SaveCard()
    {
        OnSave.InvokeAsync(FormData);
    }

    void DeleteCard()
    {
        OnDelete.InvokeAsync(FormData);
    }

    void CancelCard()
    {
        OnCancel.InvokeAsync(null);
    }

}

