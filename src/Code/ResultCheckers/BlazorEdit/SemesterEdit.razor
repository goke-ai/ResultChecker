@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@attribute [Authorize]
@inject HttpClient Http
@inject IApiService ApiSvc
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localize
@inject IMatToaster Toaster


	<div>
		<EditForm Model="@FormData" OnValidSubmit="@SaveSemester" Context="SemesterEditContext">
			        <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mat-layout-grid">
                        <div class="mat-layout-grid-inner">
                            <div class="mat-layout-grid-cell-span-12">
								<MatTextField Label="Name" @bind-Value="FormData.Name" FullWidth="true" />
							</div>

		<!-- StudentCourses | StudentCourse | Collection -->
						<div class="mat-layout-grid-cell-span-12">
							<MatSlideToggle Label="Tracker"  @bind-Value="@showTracker"></MatSlideToggle>
							@if (showTracker)
							{
								<fieldset disabled>
									<TrackerDto Model="FormData" />
								</fieldset>
							}
						</div>
					</div>
				</div>

				<MatDivider></MatDivider>

			    <MatButton Type="button" OnClick="@(e => { DialogIsOpen = false; })">@Localize["CANCEL"]</MatButton>
                @if(CanAdd || CanUpdate)
				{
				<!-- Button to save the product -->
                <MatButton Type="submit" title="@(Localize["Save Semester"])">@Localize["SAVE"]</MatButton>
                }
				<!-- Only show button if not a new record -->
                @if (FormData.Id > 0 && CanDelete)
                {
                    <!-- Button to delete the product -->
                    <MatButton Type="button" OnClick="DeleteSemester" Icon="@MatIconNames.Restore_from_trash" title="Delete Semester">DELETE</MatButton>
                }

		</EditForm>
				
	</div>

@code {
    
    
    [Parameter] public SemesterDto FormData { get; set; } = new SemesterDto();
    [Parameter] public bool DialogIsOpen { get; set; }
    [Parameter] public bool CanView { get; set; } = true;
    [Parameter] public bool CanAdd { get; set; }
    [Parameter] public bool CanUpdate { get; set; }
    [Parameter] public bool CanDelete { get; set; }

    bool showTracker;

    //<!-- StudentCourses | StudentCourse | Collectiion -->

	
    [Parameter] public EventCallback<SemesterDto> OnSaveSemester { get; set; }
    [Parameter] public EventCallback<SemesterDto> OnDeleteSemester { get; set; }


    void SaveSemester()
    {
        OnSaveSemester.InvokeAsync(FormData);
    }

    void DeleteSemester()
    {
        OnDeleteSemester.InvokeAsync(FormData);
    }



}

