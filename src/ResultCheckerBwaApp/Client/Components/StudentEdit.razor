@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@attribute [Authorize]
@inject HttpClient Http
@inject IApiService ApiSvc
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localize
@inject IMatToaster Toaster


	<div>
		<EditForm Model="@FormData" OnValidSubmit="@SaveStudent" Context="StudentEditContext">
			        <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mat-layout-grid">
                        <div class="mat-layout-grid-inner">
				<!-- MatricNo | isForeignKey(False) | @string | 00 -->
							
					<div class="mat-layout-grid-cell-span-12">
						<MatTextField TextArea="true" Label="@(Localize["Matric No"])" @bind-Value="FormData.MatricNo" FullWidth="true" />
						<ValidationMessage For="@(() => FormData.MatricNo)" />
					</div>
				<!-- Lastname | isForeignKey(False) | @string | 00 -->
							
					<div class="mat-layout-grid-cell-span-12">
						<MatTextField TextArea="true" Label="@(Localize["Lastname"])" @bind-Value="FormData.Lastname" FullWidth="true" />
						<ValidationMessage For="@(() => FormData.Lastname)" />
					</div>
				<!-- Firstname | isForeignKey(False) | @string | 00 -->
							
					<div class="mat-layout-grid-cell-span-12">
						<MatTextField TextArea="true" Label="@(Localize["Firstname"])" @bind-Value="FormData.Firstname" FullWidth="true" />
						<ValidationMessage For="@(() => FormData.Firstname)" />
					</div>
				<!-- Middlename | isForeignKey(False) | @string | 00 -->
							
					<div class="mat-layout-grid-cell-span-12">
						<MatTextField TextArea="true" Label="@(Localize["Middlename"])" @bind-Value="FormData.Middlename" FullWidth="true" />
						<ValidationMessage For="@(() => FormData.Middlename)" />
					</div>

		<!-- StudentCourses | StudentCourse | Collection -->
						<div class="mat-layout-grid-cell-span-12">
							<MatSlideToggle Label="Tracker"  @bind-Value="@showTracker"></MatSlideToggle>
							@if (showTracker)
							{
								<fieldset disabled>
									<TrackerDto Model="FormData" />
								</fieldset>
							}
						</div>
					</div>
				</div>

				<MatDivider></MatDivider>

			    <MatButton Type="button" OnClick="@(e => { DialogIsOpen = false; })">@Localize["CANCEL"]</MatButton>
                @if(CanAdd || CanUpdate)
				{
				<!-- Button to save the product -->
                <MatButton Type="submit" title="@(Localize["Save Student"])">@Localize["SAVE"]</MatButton>
                }
				<!-- Only show button if not a new record -->
                @if (FormData.Id > 0 && CanDelete)
                {
                    <!-- Button to delete the product -->
                    <MatButton Type="button" OnClick="DeleteStudent" Icon="@MatIconNames.Restore_from_trash" title="Delete Student">DELETE</MatButton>
                }

		</EditForm>
				
	</div>

@code {
    
    
    [Parameter] public StudentDto FormData { get; set; } = new StudentDto();
    [Parameter] public bool DialogIsOpen { get; set; }
    [Parameter] public bool CanView { get; set; } = true;
    [Parameter] public bool CanAdd { get; set; }
    [Parameter] public bool CanUpdate { get; set; }
    [Parameter] public bool CanDelete { get; set; }

    bool showTracker;

    //<!-- StudentCourses | StudentCourse | Collectiion -->

	
    [Parameter] public EventCallback<StudentDto> OnSaveStudent { get; set; }
    [Parameter] public EventCallback<StudentDto> OnDeleteStudent { get; set; }


    void SaveStudent()
    {
        OnSaveStudent.InvokeAsync(FormData);
    }

    void DeleteStudent()
    {
        OnDeleteStudent.InvokeAsync(FormData);
    }



}

